{
  "name": "youtube-music-desktop",
  "version": "1.0.0",
  "description": "Gelişmiş YouTube Music Masaüstü Uygulaması - Şeffaf Tasarım ve Sistem Tepsisi Desteği",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-packager . \"YouTube Music\" --platform=win32 --arch=x64 --icon=icons/icon.ico --out=dist --overwrite --asar"
  },
  "keywords": [
    "youtube",
    "music",
    "desktop",
    "electron",
    "transparent",
    "mica",
    "windows"
  ],
  "author": "Alchemei",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alchemei/youtube-music-desktop-app.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.ytmusic.desktop",
    "productName": "YouTube Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "icons/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icons/icon.ico"
    }
  }
}
